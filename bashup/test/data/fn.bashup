#!/bin/bash

set -e -o pipefail

@fn enable_ramdisk size, path='/ramdisk' {
    if ! grep "^tmpfs ${path}" /etc/fstab; then
        echo "tmpfs ${path} tmpfs rw,size=${size} 0 0" >> /etc/fstab
        mkdir -p "${path}"
        mount "${path}"
    fi
}

@fn ensure_root {
    if [ ${EUID} -ne 0 ]; then
        echo "[ERROR] Script must be run as root."
        return 1
    fi
}

ensure_root
enable_ramdisk --size "4G"
